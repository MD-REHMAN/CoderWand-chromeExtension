{
	"manifest_version": 2,
	"name": "CorderWand",
	"description": "Your magic wand which hides unwanted stuff from the webpage.",
	"version": "0.1.0",
	"icons": {
		"48": "./assets/coderWand.png"
	},
	"background": {
		"scripts": ["./eventPage.js"],
		"psersistent": false
	},
	"options_page": "options.html",
	"browser_action": {
		"default_icon": "./assets/coderWand.png",
		"default_popup": "popup.html"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["index.js"],
			"css": ["./src/app.css"]
		}
	],
	"permissions": ["storage", "tabs", "contextMenus"],

	"commands": {
		"undo_hide": {
			"suggested_key": {
				"default": "Ctrl+Z"
			},
			"description": "Undo Hide actions"
		}
	}
}
